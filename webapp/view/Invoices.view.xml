<mvc:View 
    controllerName="com.incture.ui5.week10assignment.controller.Invoices"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:ui="sap.ui.table"
    xmlns:core ="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <OverflowToolbar >
                            <Button icon="sap-icon://nav-back" type="Emphasized" press="navToCustomer"/>
                        </OverflowToolbar>
                        
                        <List id="ivoice" items="{path:'localModel>/invoices',sorter:{path:'ShipperName',descending:false,group:true}}" >
                        <headerToolbar>
                        <Toolbar >
                        <Title id="_invoiceList" text="Invoice List"></Title>
                        </Toolbar>
                        </headerToolbar>
                            <items>
                                <ObjectListItem id="_customerDetails" title="{localModel>CustomerName}">
                                    <ObjectAttribute id="_orderID" text="OrderID:{localModel>OrderID}"/>
                                    <ObjectAttribute id="_shipperName" text="Shipper:{localModel>ShipperName}"/>
                                    <ObjectAttribute id="_productName" text="Product:{localModel>ProductName}"/>
                                </ObjectListItem>
                            </items>
                        </List>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
